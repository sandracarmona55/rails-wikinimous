<div class="container my-15">
  <p><%= link_to "Create an article", new_article_path %></p>
    <% @articles.each do |article| %>
      <h2> <%= link_to article.title, article_path(article) %> </h2>
      <p title="<%= article.content %>"><%= article.content.truncate(50) %></p>
    <% end %>
</div>
